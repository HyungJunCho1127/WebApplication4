@model WebApplication4.Models.User

@{
    ViewBag.Title = "Email";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@using (Html.BeginForm("SendEmail", "Home", Model))

{<div>

        <hr />
        <dl class="dl-horizontal">

            <h2>Click send to get Vaccination Documents Via Email</h2>
            <body>
                <br />
                <label>User ID</label>
                @Html.DisplayFor(model => model.Id)
                <br />
                <label>User Name : </label>
                @Html.DisplayFor(model => model.UserName)
                <br />
                <label>Email : </label>
                @Html.DisplayFor(model => model.Email)
                <br />
                <div class="form-group">

                    <br />
                    <input type="submit" name="SendEmail" value="Send" class="btn btn-danger" />
                </div>

            </body>

        </dl>
    </div>
    
    <br />
    @Html.ActionLink("Back to home", "Index", "Home", Model, null)

}

